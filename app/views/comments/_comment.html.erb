<h4><strong><%= comment.name %></strong></h4>
<div class="comment_description">
  <%= comment.body %>
</div>
<blockquote>
  <footer>Submitted <%= time_ago_in_words(comment.created_at) %> Ago
    <% if current_user %>
      |<%= link_to 'Delete', [comment.post, comment], method: :destroy, data: { confirm: 'Are you sure?'} %>
    <% end %>
   </footer>
</blockquote>
<hr>